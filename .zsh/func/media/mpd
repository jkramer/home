# vim:ft=zsh

MPD_HOME="$HOME/.mpd"
MPD="/usr/bin/mpd"


function run-mpd () {
	is-mpd-running || $MPD &> /dev/null
}


function stop-mpd () {
	is-mpd-running && $MPD --kill &> /dev/null
}


function is-mpd-running () {
	if [[ -e "$MPD_HOME/pid" ]]; then
		return 0
	else
		return -1
	fi
}


run-mpd
